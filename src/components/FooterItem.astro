---
interface Props {
    icon?: string;
    text?: string;
    url?:string;
}

const { icon, text, url } = Astro.props;

// Meter props dentro de una clase HTML se llama
// "Interpolaci√≥n Directa"
---

<a
    class="p-2 bg-blue-1000 whitespace-nowrap inline-block hover:bg-red-300 
    cursor-pointer text-white text-2xl text-center hover:text-black rounded"
    href={url}
>
    {text}
    <i class={`text-2xl text-white ${icon}`}></i>
</a>
