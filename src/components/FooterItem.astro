---
interface Props {
    icon?: string;
    text?: string;
    url?:string;
}

const { icon, text, url } = Astro.props;

// Meter props dentro de una clase HTML se llama
// "Interpolaci√≥n Directa"
---

<a
    class="p-2 bg-blue-1000 whitespace-nowrap inline-block border-b-3 border-black ease duration-200 hover:border-white 
cursor-pointer text-white text-2xl text-center font-semibold  rounded"
    href={url}
>
    {text}
    <i class={`text-2xl text-white ${icon}`}></i>
</a>
